<% wrap_layout :layout do %>

<div class="masthead" style="background: <%= current_page.data.masthead %>; color: <%= current_page.data.masthead_text %>; ">
  <div class="masthead-content">
    <div class="inner">
      <% if current_page.data.label %>
        <h6 color: <%= current_page.data.masthead_text %>><%= current_page.data.label %> </h6>
      <% end %>
      <h1><%= current_page.data.title %></h1>
      <h2><%= current_page.data.subtitle %></h2>

      <% if current_page.data.download %>
        <div class="download">
        <%= image_tag("images/essays/file-pdf-solid.svg", style: "color: #FFFFFF;") %> <%= link_to('Download the guide', current_page.data.download) %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<section class="essay">
  <div class="inner">
  <article>
    <%= yield %>
  </article>
  </div>
</section>
<% end %>
