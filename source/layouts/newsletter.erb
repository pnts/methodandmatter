
<% wrap_layout :layout do %>
<main>
  <section class="content">
    <div class="col-1 kitchen-party">
      <h5><%= link_to('the becoming', 'the-becoming') %>: <%= current_page.data.date %></h5>
      <h1><%= current_page.data.description %></h1>
        <%= yield %>
      <hr />
    </div>
  </section>

  <div class="content">
    <div class="col-1 kitchen-party">
      <div class="mini tb-signup">
        <span class="mini-header">the becoming</span>
        <p>Sign-up to receive monthly updates in your inbox.</p>
        <p class="data-policy">Your privacy is <em>very</em> important to me. I will not sell or share your email address, nor include tracking pixels in any emails I send to your inbox. You can unsubscribe instantly at any time.</p>
        <%= partial "tb_form" %>
      </div>
    </div>
  </div>
</main>

<% end %>
