<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="<%= current_page.data.description %>" />
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "/// method & matter" %></title>
    <link rel="stylesheet" type="text/css" href="https://cloud.typography.com/6543216/6501012/css/fonts.css" />
    <%= stylesheet_link_tag "mm" %>
    <%= javascript_include_tag "mm" %>
  </head>
  <body class="<%= page_classes %>">
    <header>
      <div class="inner">
        <div class="site-branding">
          <%= link_to('method & matter', '/', :class => 'logo') %>
        </div>
        <nav>
          <ul>
            <li class="coaching"><%= link_to('individual coaching', 'coaching') %> </li>
            <li class="team-coaching"><%= link_to('team coaching', 'team-coaching') %> </li>
            <li class="workshops"><%= link_to('workshops', 'workshops') %> </li>
            <li class="about"><%= link_to('about', 'about') %> </li>
          </ul>
        </nav
      </div>
    </header>

    <main>
      <%= yield %>
    </main>

    <%= partial "footer" %>
  </body>
</html>
